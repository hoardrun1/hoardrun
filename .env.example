# Example environment variables
# Copy this file to .env.local and fill in your actual values

# Client-side accessible variables
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"

# Server-side only variables (not exposed to client)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# MTN MOMO API Configuration
MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MOMO_PRIMARY_KEY=your_momo_primary_key
MOMO_SECONDARY_KEY=your_momo_secondary_key
MOMO_TARGET_ENVIRONMENT=sandbox
MOMO_CALLBACK_HOST=http://localhost:3000

# Mastercard API Configuration
MASTERCARD_API_KEY=your_mastercard_api_key
MASTERCARD_PARTNER_ID=your_mastercard_partner_id
MASTERCARD_ENVIRONMENT=sandbox
MASTERCARD_CERT_PATH=/secure/certs/mastercard/hoardrun.p12
MASTERCARD_PRIVATE_KEY_PATH=/secure/certs/mastercard/hoardrun.key
MASTERCARD_CLIENT_ID=your_mastercard_client_id
MASTERCARD_ORG_NAME=Hoardrun
MASTERCARD_COUNTRY=GH
MASTERCARD_CERT_PASSWORD=your_cert_password_here

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hoardrun?schema=public"

MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

